<div class="row">
  <div class="large-12 columns">

<h1 class="text-center">Andrew's Projects</h1>

<% if @projects.count > 0 %>
	<% if @featured_projects.count > 0 %>
		<div class="row">
			<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-2">
				<% @featured_projects.each do |project| %>
					<li><h3 class="text-center"><%= project.title %></h3>
					<% unless project.summary =="" %>
						<p><%= project.summary %></p>
					<% end %>
					<a href="<%= project_path(:title => project.title) %>" class=" text-center button round">More</a></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<hr>
	<div class="row">
		<h4>Example Design: Musical Waves</h4>
		<%= image_tag 'design.png' %>
	</div>
	<hr>

	<div class="row">
		<ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-3">
			<% (@projects - @featured_projects).each do |project| %>
				<li><h4><%= project.title %></h4>
				<% unless project.summary =="" %>
					<p><%= project.summary %></p>
				<% end %>
				<a href="<%= project_path(:title => project.title) %>" class="button round">More</a></li>
			<% end %>
		</ul>
	</div>
<% end %>

  </div>
</div>